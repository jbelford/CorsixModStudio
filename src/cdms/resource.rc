// CorsixModStudio Windows resources
// NOTE: resource.h is intentionally NOT included here. The C++ code loads
// bitmaps by string name (e.g. wxT("IDB_DONATE")), so the RC compiler must
// treat identifiers as string resource names, not numeric IDs.
#include <winres.h>

// Enable Per-Monitor V2 DPI awareness via the wxWidgets-provided manifest.
// wxUSE_DPI_AWARE_MANIFEST=2 selects Per-Monitor V2 (Win10 1703+), with
// automatic fallback to system-aware on older Windows.
#define wxUSE_RC_MANIFEST 1
#define wxUSE_DPI_AWARE_MANIFEST 2
#include <wx/msw/wx.rc>

/////////////////////////////////////////////////////////////////////////////
// Neutral resources

LANGUAGE LANG_NEUTRAL, SUBLANG_NEUTRAL

RIDB_LOADING            BITMAP                  "res\\logo_smaller.bmp"

/////////////////////////////////////////////////////////////////////////////
// English (U.K.) resources

LANGUAGE LANG_ENGLISH, SUBLANG_ENGLISH_UK

/////////////////////////////////////////////////////////////////////////////
// Bitmaps

IDB_DONATE              BITMAP                  "res\\donate.bmp"

/////////////////////////////////////////////////////////////////////////////
// Icons

APPICON                 ICON                    "res\\icon.ico"

/////////////////////////////////////////////////////////////////////////////
// Version

VS_VERSION_INFO VERSIONINFO
 FILEVERSION 0,5,7,0
 PRODUCTVERSION 0,5,7,0
 FILEFLAGSMASK 0x17L
#ifdef _DEBUG
 FILEFLAGS 0x3L
#else
 FILEFLAGS 0x2L
#endif
 FILEOS 0x4L
 FILETYPE 0x1L
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "080904b0"
        BEGIN
            VALUE "CompanyName", "www.corsix.org"
            VALUE "FileDescription", "Corsix's Mod Studio"
            VALUE "FileVersion", "0, 5, 7, 0"
            VALUE "InternalName", "CDMS"
            VALUE "LegalCopyright", "Licensed under the GNU GPL"
            VALUE "OriginalFilename", "CorsixModStudio.exe"
            VALUE "ProductName", "Corsix's Mod Studio"
            VALUE "ProductVersion", "0, 5, 7, 0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x809, 1200
    END
END
